{
	"$schema": "http://json.schemastore.org/chrome-manifest",
	"manifest_version": 3,
	"name": "Linkedin Tools",
	"minimum_chrome_version": "114",
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [],
	"web_accessible_resources": [
		{
			"resources": [
				"assets/downloadLight.svg",
				"assets/downloadDark.svg",
				"xhrIntercept.js"							// injected later
			],
			"matches": ["https://www.linkedin.com/*"]
		}
	],
	"content_scripts": [
		{
			"js": ["main.js"],
			"css": ["style.css"],
			"run_at": "document_start",						// we must intercept every request before it responds back
			"matches": [
				"https://www.linkedin.com/",				// added this because the main likedin page makes some xhr requests to get the first posts metadata BEFORE redirecting to the 'feed/' page, which also needs intercept 
				"https://www.linkedin.com/feed/*",
				"https://www.linkedin.com/posts/*",
				"https://www.linkedin.com/feed/update/*"
			]
		}
	]
}